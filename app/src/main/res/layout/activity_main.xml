<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.muhammadafifaf.bantu.MainActivity"
    android:background="#E0E0E0"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/number_edit_text_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/number_edit_text"
        android:textColor="#616161"/>

    <EditText
        android:id="@+id/message_edit_text_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Fill your message"
        android:textColor="#616161"/>

    <TextView
        android:id="@+id/instruction_text_view_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Touch the round button below for help"
        android:gravity="center"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/help_button_id"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_gravity="center"
        android:layout_marginTop="45dp"
        android:background="@drawable/roundbutton"
        android:text="HELP!"
        android:textSize="80dp" />

</LinearLayout>
